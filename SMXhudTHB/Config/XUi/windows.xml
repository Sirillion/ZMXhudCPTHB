<configs>

<!--	// SMX // Target Health Frame -->

		<remove xpath="/windows/window[@name='windowTargetBar']" />

		<append xpath="/windows">
			<window name="windowTargetBar" controller="TargetBar">
				<rect pos="-210,-85" size="420,80" visible="{visible}">
					<sprite name="border" depth="1" size="420,90" atlas="uiAtlas" sprite="smx_hud_targethealth_background" type="sliced" globalopacity="false" />
					<sprite name="BarContent" depth="2" pos="15,-53" size="390,30" atlas="uiAtlas" sprite="smx_hud_targethealth_bar" type="filled" fill="{fill}" globalopacity="false" />
					<label name="TextContent" depth="3" pos="9,-25" height="30" text="{name}" color="[hudElementsLBLPri]" font_size="28" crispness="Never" effect="outline" effect_distance="1,1" justify="center" pivot="topleft" />
					<label name="TextContent" depth="3" pos="9,-56" height="30" text="{currentwithmax}" color="[hudElementsLBLPri]" font_size="22" crispness="Never" effect="outline" effect_distance="1,1" justify="center" pivot="topleft" />
				</rect>
			</window>
		</append>

</configs>